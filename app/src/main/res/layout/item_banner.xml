<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardCornerRadius="@dimen/cardview_default_elevation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_banner_width"
    android:layout_height="@dimen/item_banner_height"
    android:layout_marginBottom="@dimen/cardview_default_elevation"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="@dimen/item_banner_width"
            android:layout_height="@dimen/item_banner_width"/>

        <TextView
            android:id="@+id/tv_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="@dimen/item_name_text_size"
            android:layout_margin="@dimen/item_name_text_margin"/>

    </LinearLayout>

</android.support.v7.widget.CardView>